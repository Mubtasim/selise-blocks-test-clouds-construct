{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom"],
    "baseUrl": "src",
    "paths": {
      "/*": ["*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "pages/*": ["pages/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src", "**/*.test.ts", "**/*.test.tsx", "jest.setup.ts"]
}
